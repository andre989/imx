{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Execute unit tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"stopOnEntry": false,
			"args": [
                "-u", "tdd",
                "--timeout", "999999",
                "--colors",
                "${workspaceRoot}/dist/test/**/*.js"
            ],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"sourceMaps": true
		}
	]
}